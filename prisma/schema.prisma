generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_URI")
}

model orders {
  order_id        Int       @id @default(autoincrement())
  email           String    @db.VarChar(255)
  username        String?   @db.VarChar(255)
  product_id_1    Int?
  product_name_1  String?   @db.VarChar(255)
  product_price_1 String?   @db.VarChar(255)
  product_id_2    Int?
  product_name_2  String?   @db.VarChar(255)
  product_price_2 String?   @db.VarChar(255)
  product_id_3    Int?
  product_name_3  Int?
  product_price_3 String?   @db.VarChar(255)
  product_id_4    Int?
  product_name_4  String?   @db.VarChar(255)
  product_price_4 String?   @db.VarChar(255)
  total           String?   @db.VarChar(255)
  discount_id     String?   @db.VarChar(255)
  created_at      DateTime? @db.Timestamp(6)
  modified_at     DateTime? @db.Timestamp(6)
  deleted_at      DateTime? @db.Timestamp(6)
  paypal_order_id String?   @db.VarChar(255)
  first_name      String?   @db.VarChar(255)
  last_name       String?   @db.VarChar(255)
  phone_number    String?   @db.VarChar(255)
}

model course {
  id          Int       @id
  name        String?   @db.VarChar(255)
  description String?   @db.VarChar(255)
  price       Int?
  length      String?   @db.VarChar(255)
  imagepath   String?   @db.VarChar(255)
  created_at  DateTime? @db.Timestamp(6)
  modified_at DateTime? @db.Timestamp(6)
  deleted_at  DateTime? @db.Timestamp(6)
}
